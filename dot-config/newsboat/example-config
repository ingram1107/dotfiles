download-path "~/Download/"
download-filename-format "%n-%t.%e"
player "mp4"

external-url-viewer "urlview"
max-items 1000
notify-program "/usr/bin/dunstify"
notify-format "Unread: %n, New: %d"

confirm-delete-all-articles no
confirm-mark-all-feeds-read no

bind-key j down
bind-key k up
bind-key G end
bind-key g home
bind-key f pagedown
bind-key b pageup
bind-key l open
bind-key h quit
bind-key n next-unread
bind-key N prev-unread

color listnormal magenta default
color listfocus yellow color237
color listnormal_unread blue default
color listfocus_unread yellow color237
color info white color237
color article white default

browser webview
macro , open-in-browser
macro v set browser "nohup mpv '%u' 2&> /dev/null &" ; open-in-browser ; set browser webview
macro q set browser "nohup qndl '%u' 2&> /dev/null &" ; open-in-browser ; set browser webview
macro w set browser "firefox %u &"; open-in-browser ; set browser webview
macro c set browser "pipe-viewer --comments='%u'" ; open-in-browser ; set browser webview

highlight feedlist "---.*---" red default bold
highlight feedlist ".*(0/0))" black
highlight article "(^Feed:.*)" red default
highlight article "(^Author:.*)" green default bold
highlight article "^(Title):.*" yellow default bold
highlight article "^(Date:.*)" magenta default
highlight article "(^Link:.*)" blue default
highlight article "https?://[^ ]+" blue default
highlight article "\\[[0-9][0-9]*\\]" blue default bold
highlight article "\\[image\\ [0-9]+\\]" green default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" red default bold
highlight article ":.*\\(link\\)$" blue default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" blue default
