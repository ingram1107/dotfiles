#!/bin/bash

INRES="1366x768"
OUTRES="1366x768"
FPS="30"
GOP="60"
GOPMIN="30"
THREADS="2"
CBR="1000k"
QUALITY="ultrafast"
AUDIO_RATE="44100"
STREAM_KEY="live_49851057_885Xmhkg8QNLXglXAO08ttwv9xe9lr"
SERVER="live-sin"

ffmpeg -f x11grab -s "$INRES" -r "$FPS" -i :0.0 -f pulse -i 0 -f flv -ac 2 -ar $AUDIO_RATE -vcodec libx264 -g $GOP -keyint_min $GOPMIN -b:v $CBR -minrate $CBR -maxrate $CBR -pix_fmt yuv420p -s $OUTRES -preset $QUALITY -tune film -acodec aac -threads $THREADS -strict normal -bufsize $CBR "rtmp://$SERVER.twitch.tv/app/$STREAM_KEY"
